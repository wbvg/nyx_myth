<div class="topper">
  <%= devise_error_messages! %>
</div>

<div class="row">
  <div class="col-lg-6">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.text_field :username, {placeholder: 'USERNAME', class: 'raiders'} %>
    <%= f.email_field :email, placeholder: 'EMAIL' , :class => 'raiders' %>
  </div>

  <div class="col-lg-6">
      <%= f.password_field :password, placeholder: 'PASSWORD | Min 5 Characters', :class => 'raiders'   %>
      <%= f.password_field :password_confirmation, placeholder: 'CONFIRM PASSWORD ', :class => 'raiders'  %>
  </div>

  <div class="selection">
    <li><%= f.label :gender , 'SELECT GENDER' %></li>
    <%= f.select :gender, options_for_select([['Female'], ['Male']]), :include_blank => true  %>
   </div>

    <%= f.file_field :avatar, placeholder: 'Upload Profile Image'%>

    <div class="selection">
        <li><%= f.label :birthday, 'Please select your birthday' %></li>
        <%= f.date_select :birthday, as: :date, start_year: Date.today.year - 70,
                                  end_year: Date.today.year - 15,
                                  order: [:month, :day, :year] , label: false %>
    </div>
    <div class="selection">
      <li><%= f.label :timer, 'Select a time to receive an email reminder to read' %></li>
    <%= f.time_select :timer, {ampm: true,  include_seconds: false }%>
    <%= f.time_zone_select :time_zone, /Australia/, :default => "Sydney" %>
    </div>

    <div class="center">
      <%= f.submit "Sign up", :class => "btn-signup2" %>
            <br />
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
</div>




