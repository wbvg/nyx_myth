<div id="chapter-container">
  <div class="row">

    <div class="col-lg-6 ">
      <ul>
        <h2 class="bottomer">Forum List</h2>

<!--         I prefer these methods in the view  -->

        <% @chapters.each do |chapter| %>
              <li class="bottomer"><span class="btn-signup2"><%= chapter.title%></span>        By <%= chapter.user.username %>   |   <%= time_ago_in_words(chapter.created_at)  +  " ago" %></li>

                  <% chapter.sections.order(:id).each do |section| %>
                      <li class="bottomer"><%= link_to(section.section_title, [chapter, section], :class => "btn-signin") %><span class="padder"><%=   %></span></li>
                  <% end %>
        <% end %>
      </ul>
    </div>

    <div class="col-lg-6">
    </div>

  </div>
</div>

<script type="text/javascript">
/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
var disqus_shortname = 'nyxmythchapter'; // required: replace example with your forum shortname

/* * * DON'T EDIT BELOW THIS LINE * * */
(function () {
var s = document.createElement('script'); s.async = true;
s.type = 'text/javascript';
s.src = '//' + disqus_shortname + '.disqus.com/count.js';
(document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
}());
</script>

